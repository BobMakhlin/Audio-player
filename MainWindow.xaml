<Window x:Class="AudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,5" Height="65" Width="65">
            <Image Name="iPlay" Source="Resources/blay-button.png" MouseDown="OnPlayMouseDown"/>
            <Image Name="iPause" Source="Resources/pause-button.png" MouseDown="OnPauseMouseDown" Visibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
